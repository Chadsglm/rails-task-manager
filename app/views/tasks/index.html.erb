<div class="container">
  <div class="col-xs-12">
    <h1>My Tasks</h1>
    <% @tasks.each do |t| %>
      <div class="custom-control custom-checkbox">
        <%= link_to task_path(t) do %>
          <% if t.completed%>
            <i class='fas fa-check-square'></i>
          <% else %>
            <i class='fas fa-square'></i>
          <% end %>
        <% end %>

        <label for="customCheck<%= t.id %>">
          <%= link_to t.title, task_path(t) %>
        </label>

        <%= link_to edit_task_path(t) do %>
          <i class="fa fa-pencil"> </i>
        <% end %>
        <%= link_to task_path(t),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash"> </i>
        <% end %>

      </div>
    <% end %>
    <hr>
    <div>
      <%= link_to new_task_path do %>
        <i class="fa fa-plus-square">Add new task</i>
      <% end %>
    </div>
  </div>
</div>
