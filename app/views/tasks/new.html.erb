<div class="container">
  <div class="col-xs-12">
    <%= form_for(@task) do |f| %>
      <h1 class="my-2">New Task</h1>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
  <br>
  <div >
    <%= link_to tasks_path do %>
      <i class="fa fa-undo" aria-hidden="true"> Back to checklist</i>
    <% end %>
  </div>
</div>
