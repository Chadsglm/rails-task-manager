<div class="container">
  <div class="col-xs-12">
    <!-- details -->
    <div class="custom-control">
      <h1><%= @task.title %></h1>
      <blockquote class="blockquote text-left">
        <p class="mb-0"><%= @task.details %></p>
      </blockquote>
    </div>
    <div class="my-2 custom-control">
      <% if @task.completed %>
        <i class="fa fa-check-square-o padded"><%= ' this task is completed' %></i>
      <% else %>
        <i class="fa fa-square-o padded"><%= ' this task is NOT completed' %></i>
      <% end %>
    </div>
    <hr>
    <div class="custom-control">
      <%= link_to tasks_path do %>
        <i class="fa fa-undo" aria-hidden="true"> Back to checklist</i>
      <% end %>
    </div>
  </div>
</div>



